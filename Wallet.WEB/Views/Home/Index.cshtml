@model IEnumerable<Wallet.WEB.Models.AccountViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayNameFor(model => item.Id)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.Money)
            </td>
            <td>
                @Html.ActionLink("Transaction", "MakeTransaction", new { moneySum = 100,  })
            </td>
        </tr>
    }

</table>